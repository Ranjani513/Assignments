/*1) Create a class which should hold products using a Map using id as key. Write a method which takes Product object as input and stores in the products collection.
	Product[ id, name, price]

2) Write a method to print the products.

3) Write a method which returns the list of ids that map contains.
*/
package Ass4;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Map.Entry;
import java.util.Set;

public class Ass3 {
	String name;
static	int id;
	double price;
	static int id1;
	static int c=0;
	Ass3(String name,int id,double price)
	{
		this.name=name;
		this.id=id;
		this.price=price;
	}
	public static void store(int id,Ass3 a)
	{
		HashMap<Integer,Ass3> h=new HashMap<>();
		 Set<Entry<Integer, Ass3>> set=h.entrySet();//Converting to Set so that we can traverse  
		    Iterator itr=set.iterator();  
		    while(itr.hasNext()){  
		        //Converting to Map.Entry so that we can get key and value separately  
		        Map.Entry entry=(Map.Entry)itr.next();  
		        System.out.println(entry.getKey()+" "+entry.getValue()); 
		        System.out.println(a.name);}
	}
	
	public static void display()
	{
		
		HashMap<Integer,Ass3> h=new HashMap<>();
		 Set<Entry<Integer, Ass3>> set=h.entrySet();//Converting to Set so that we can traverse  
		    Iterator itr=set.iterator();  
		    while(itr.hasNext()){  
		        //Converting to Map.Entry so that we can get key and value separately  
		        Map.Entry entry=(Map.Entry)itr.next();  
		        System.out.println(entry.getKey()+" "+entry.getValue());  
		    }  
	}

	public static void main(String[] args)
	{
		//HashMap<Integer,Ass3> h=new HashMap<>();
		Ass3 a= new Ass3("p1",1,12);
		Ass3 a1= new Ass3("p2",2,12);
		Ass3 a2= new Ass3("p3",3,12);
		Ass3 a3= new Ass3("p4",4,12);
		Ass3 a4= new Ass3("p5",5,12);
		Ass3 a5= new Ass3("p6",6,12);
		Ass3 a6= new Ass3("p7",7,12);
		Ass3 m[]= {a,a1,a2,a3,a4,a5,a6};
		for(int i=0;i<m.length;i++)
		{
			Ass3.store(id,m[i]);
		}
		Ass3.display();
	}
}
