<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
               <bean abstract="true" class="com.inheritance.person" id="person">
               <property name="name" value="Ranjani"></property>
               </bean>
                <bean  class="com.inheritance.person" id="student" parent="person">
               <property name="id" value="21"></property>
                <property name="persontype" value="student"></property>
               </bean>
                <bean  class="com.inheritance.person" id="employee" parent="person">
               <property name="id" value="20"></property>
                <property name="persontype" value="employee"></property>
               </bean>
               
  </beans>